<% include ../partials/header %>


<div class="container">
 
       <h1 class='text-center my-4'>Edit comment in <%= campground.name %></h1>

    <div class="row">
        <div class="col-md-4 offset-md-4">
             
            <form action='/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
                <div class="form-group">
                    <input class='form-control' type='text' name='comment[text]' value='<%= comment.text %>'>
                </div>
                
                <div class="form-group">
                    <input class='btn btn-large btn-success btn-block' type='submit'>
                </div> 
                
            
            
             <a href='/campgrounds/<%= campground.id %>'>Return</a>
            
        </form>
        </div>
    </div>
        
        
       
 
</div>

<% include ../partials/footer %>