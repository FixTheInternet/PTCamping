<% include ../partials/header %>

<div class="container">
    
    <div class="row">
    
        <div class="col-md-3">
                <p class='lead'>TentLife</p>
            
            <div class="list-group">
                <li class="list-group-item active">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
        </div>
        
        
        <div  class="col-md-9">
            
            <!--<h1 <%= campground.name %> </h1>-->
            
            <div class="card preview-img">
              <img class="card-img-top" src='<%= campground.img %>' alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= campground.name %> <span class="float-sm-right">9.00$/Night</span> </h5>
                <p class="card-text"><%= campground.description %></p>
       
                      <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary">Edit</a>
                 <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                     <button class="btn btn-danger">Delete</button>
                 </form>
                  <% }%>
                  
              </div>
            </div>
            
            <!--<div class="thumbnail">-->
            <!--    <img class='img-fluid img-thumbnail' src=<%= campground.img %> >-->
            <!--    <div class="caption-full">-->
            <!--        <h4 class='float-sm-right'>9.00$ night</h4>-->
            <!--        <h4><a href=''><%= campground.name %></a></h1>-->
            <!--        <p> <%= campground.description %> </p>-->
            <!--    </div>-->
            <!--</div>-->
            
            <div class="card-body">
                <div class="text-right"><a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-outline-success">Add new comment</a></div>
                
                 <% campground.comments.forEach(function(comment){ %>
                 
                    <div class="row">
                        <div class="col-md-12">
                    <strong> <%= comment.author.username %></strong>   
                        <span class="float-sm-right">10 days ago</span>
                        <p><%= comment.text %></p>
                        </div>
                   </div>
                   
                <% }) %>
                     
            </div>
            
            
            
            
            
            
