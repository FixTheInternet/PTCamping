<% include partials/header %>


<div class='container mt-5'>
    <header class='jumbotron'>
       <div class='container'>
            <h1>PTCamping</h1>
            <p>Os melhores parques de campismo de Portugal</p>
            <p>
                    <a class='btn btn-success btn-large' href='campgrounds/new'>Adicionar novo parque de campismo</a>
            </p>
        </div>
    </header>



    <div class="row">
        <div class="col-lg-12">
            <h3>Os parque de campismo mais populares</h3>
        </div>
    </div>


    <div class="row text-center" style='display:flex; flex-wrap: wrap;'>
        <% campgrounds.forEach(function(campground) {  %>

              <div class="col-md-3 col-sm-6">
                <div class='img-thumbnail'>
                    <img style="width: 100%; height: 100%" src=<%= campground.img %> >
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <a href="campgrounds/<%= campground._id %>" class="btn btn-success">Mais informação</a>
                 </div>
              </div>
        <% }) %>
    </div>
</div>



<% include partials/footer %>